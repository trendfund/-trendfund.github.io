<%- partial('partial/banner') %>
<section class="posts">
  <% site.posts.data.sort(function(a,b) {return +b.date - +a.date}).map(post => { %>
  <a href="<%- url_for(post.path) %>" class="card">
    <div>
    <img src="<%- url_for(post.path + post.image) %>" alt="<%= post.title %>" />
    <% post.categories.data.map(item => { %>
      <p class="category"><%= item.name %></p>
    <% }) %>
    <p class="title"><%= post.title %></p>
    </div>
    <span class="post-time"><%- date(post.date, "YYYY-MM-DD") %></span>
  </a>
  <% }) %>
</section>


